<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner ">
    @{

        //List<Entities.Promocion> promociones = promoAdmin.obtenerPromos();
        //la linea de abajo no va
        List<Entities.Promocion> promociones = ViewBag.promos;
        int numElemento = 0;
        if (promociones.Count > 0)
        {
            foreach (Entities.Promocion p in promociones)
            {

                string img = "/Content/Uploads/Originals/";
                img += Path.GetFileName(p.Url);


                numElemento++;
                if (numElemento == 1)
                {
                <div class="carousel-item active">

                   
                    <img class="d-block w-100 " src="@img" alt="First slide">
                </div>
                }
                else
                {

                <div class="carousel-item">
                    <img class="d-block w-100 " src="@img" alt="First slide">
                </div>
                }



            }
        }
        else
        {
            <div class="carousel-item active">
                <img class="d-block w-100 " src="~/Content/Images/promo1.jpg" alt="First slide">
            </div>

        }

    }
