@model Entities.Articulo

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Articulo</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-row">
        <label class="control-label col-md-2" for="estilo">Estilo</label>
        <input class="form-control text-box single-line valid" id="estilo" name="estilo" type="text" value=@Model.Estilo>
    </div>

    <div class="form-row">
        <label class="control-label col-md-2" for="marca">Marca</label>
        <input class="form-control text-box single-line valid" id="marca" name="marca" type="text" value=@Model.Marca>
    </div>

    <div class="form-row">
        <label class="control-label col-md-2" for="descripcion">Descripcion</label>
        <input class="form-control text-box single-line valid" id="descripcion" name="descripcion" type="text" value=@Model.Descripcion>
    </div>

    <div class="form-row">
        <label class="control-label col-md-2" for="stock">Stock</label>
        <input class="form-control text-box single-line valid" id="stock" name="stock" type="text" value=@Model.Stock>
    </div>

    <div class="form-row">
        <label class="control-label col-md-2" for="precio">Precio</label>
        <input class="form-control text-box single-line valid" id="precio" name="precio" type="text" value=@Model.Precio>
    </div>

    @*Prueba
    <input id="imagen" name="imagen" value=@Model.imagen>*@
    
    <div class="form-row">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
